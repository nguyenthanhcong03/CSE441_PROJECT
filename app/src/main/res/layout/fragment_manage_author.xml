<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_quanly"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="720dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/searchBarAuthor"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nhập tên tác giả"
            android:padding="10dp"
            android:drawableStart="@drawable/icon_search"
            android:drawablePadding="10dp"
            android:background="@drawable/background_search"
            android:layout_margin="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleViewAuthor"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/buttonAddAuthor"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#3D4446"
            android:text="+ Thêm tác giả"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>